<% if current_cart.discount == 0 %>
  $("#discount #confirm_promo div.mb-3 input#code").val("")
  if (!$("#discount #confirm_promo div.mb-3 input#code").hasClass("is-invalid")) {
      const error = document.createElement('div')
      error.classList.add("invalid-feedback")
      error.innerHTML = "Sorry your promo code is incorrect or not valid anymore."
      $("#discount #confirm_promo div.mb-3 input#code").addClass("is-invalid")
      $("#discount #confirm_promo div.mb-3").append(
          error
      )
  }
<% else %>
  $("#total_price").html("<%= number_to_currency(current_cart.total) %>")
  $("#discount_percent").html("(-<%= current_cart.discount %>%)").attr("hidden", false)
  $("#confirm_promo").attr("hidden", true)
  $("#form_price").val("<%= current_cart.total %>")
<% end %>