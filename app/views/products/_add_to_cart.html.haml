- if current_cart.cart_items.where(product_id: product.id).empty?
  = bootstrap_form_with model: @cart_item do |f|
    = f.hidden_field :product_id, value: product.id
    = f.hidden_field :quantity, value: 1
    = f.submit "Add To Cart", class: 'btn btn-outline-primary', id: "add_#{product.id}"
- else
  = bootstrap_form_with model: current_cart.cart_items.find_by(product_id: product.id) do |f|
    = f.hidden_field :product_id, value: product.id
    = f.hidden_field :quantity,
                      value: current_cart.cart_items.find_by(product_id: product.id).quantity + 1
    = f.submit "Add To Cart", class: 'btn btn-outline-primary', id: "add_#{product.id}"
