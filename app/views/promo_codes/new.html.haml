%h3.text-center.mt-4
  Create new promo code
.container
  .row.justify-content-center
    .col-10
      = bootstrap_form_with model: @promo_code, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f|
        .row
          .col
            = f.text_field :code, placeholder: "Promo code"
          .col
            = f.text_field :percent, placeholder: "Number between 1..100", label: "Discount amount(%)"

        %button.btn.btn-outline-light.btn-lg{"data-bs-target" => "#confirmPopup",
          "data-bs-toggle" => "modal", type: "button"}
          Cancel
        = f.submit class: "btn btn-outline-light btn-lg"

= render 'products/modal', page: 'promo_code'